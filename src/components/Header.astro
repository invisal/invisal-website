---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <div class="container mx-auto p-4 flex mb-8">
      <h2>
        <a href="/" class="flex gap-3">
          <svg
            viewBox="0 0 36 36"
            fill="none"
            role="img"
            xmlns="http://www.w3.org/2000/svg"
            width="34"
            height="34"
            ><mask
              id=":rgi:"
              maskUnits="userSpaceOnUse"
              x="0"
              y="0"
              width="36"
              height="36"
              ><rect width="36" height="36" rx="72" fill="#FFFFFF"></rect></mask
            ><g mask="url(#:rgi:)"
              ><rect width="36" height="36" fill="#ff948b"></rect><rect
                x="0"
                y="0"
                width="36"
                height="36"
                transform="translate(-4 -4) rotate(188 18 18) scale(1.2)"
                fill="#fcd487"
                rx="36"></rect><g transform="translate(-4 -4) rotate(8 18 18)"
                ><path
                  d="M15 21c2 1 4 1 6 0"
                  stroke="#000000"
                  fill="none"
                  stroke-linecap="round"></path><rect
                  x="11"
                  y="14"
                  width="1.5"
                  height="2"
                  rx="1"
                  stroke="none"
                  fill="#000000"></rect><rect
                  x="23"
                  y="14"
                  width="1.5"
                  height="2"
                  rx="1"
                  stroke="none"
                  fill="#000000"></rect></g
              ></g
            ></svg
          ><strong class="block" style="line-height: 36px;"
            >invisal/profile</strong
          ></a
        >
      </h2>
      <div class="flex-grow"></div>
      <div class="internal-links">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
      </div>
    </div>
  </nav>
</header>
